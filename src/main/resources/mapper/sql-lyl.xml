<?xml version="1.0" encoding="UTF-8"?>
    <!-- sql-gjy.xml : 마이바티스 실행을 위해 필요한 파일 -->

    <!-- mybatis SQL 매핑 파일을 뜻하는 지시문 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.bitc.springteamproject1209.mapper.UpdateInfoMapper">

    <select id="selectMemInfo" resultType="com.bitc.springteamproject1209.dto.ReviewDto">
    <![CDATA[
        SELECT mem_email, mem_id
        FROM tblmember
        WHERE deleted_yn = 'N'
        ORDER BY mem_idx DESC
        ]]>
  </select>

    <update id="updateInfo" parameterType="com.bitc.springteamproject1209.dto.ReviewDto">
         <![CDATA[
        UPDATE tblmember
        SET mem_pwd = #{memPwd}, mem_addr = #{memAddr}
        WHERE mem_idx = #{memIdx}
        ]]>
    </update>

    <update id="deleteInfo" parameterType="int">
    <![CDATA[
        UPDATE tblmember
        SET mem_deleted_yn = 'Y'
        WHERE mem_idx = #{mem_idx}
        ]]>
  </update>
</mapper>
